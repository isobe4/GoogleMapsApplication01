<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.isobenaoya.googlemapsapplication01.AddListActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regButton"
        android:text="regist_address" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/regButton"
        android:layout_marginStart="73dp"
        android:layout_marginBottom="374dp">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:id="@+id/deleteSwitch"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:checked="false" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:id="@+id/updateSwitch"
            android:checked="false" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview"
        android:layout_weight="1"
        android:layout_below="@+id/regButton"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginTop="49dp">

    </ListView>

</RelativeLayout>
